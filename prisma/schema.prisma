// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  phone            String
  email            String    @unique
  password         String
  user_type        UserType
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  homes            Home[]
  buyer_messages   Message[] @relation("buyer_messages")
  realtor_messages Message[] @relation("realtor_messages")
}

model Home {
  id                  Int        @id @default(autoincrement())
  address             String
  number_of_bedrooms  Int
  number_of_bathrooms Float
  city                String
  price               Float
  land_size           Float
  propertyType        ProperType
  realtor_id          Int
  listed_date         DateTime   @default(now())
  realtor             User       @relation(fields: [realtor_id], references: [id])
  images              Image[]
  messages            Message[]
}

model Message {
  id         Int    @id @default(autoincrement())
  message    String
  home_id    Int
  home       Home   @relation(fields: [home_id], references: [id])
  realtor_id Int
  realtor    User   @relation("buyer_messages", fields: [realtor_id], references: [id])
  buyer_id   Int
  buyer      User   @relation("realtor_messages", fields: [buyer_id], references: [id])
}

model Image {
  id         Int      @id @default(autoincrement())
  url        String
  home_id    Int
  home       Home     @relation(fields: [home_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum ProperType {
  RESIDENTIAL
  CONDO
}

enum UserType {
  BUYER
  REALTOR
  ADMIN
}
